{
    "name": "@spiffdog/component-library",
    "version": "0.0.1-alpha.1",
    "description": "Spiffdog Design Component Library",
    "repository": {
        "type": "git",
        "url": "https://github.com/Spiffdog-Design/component-library.git"
    },
    "private": true,
    "author": "Timothy Goyer <tim.goyer@gmail.com>",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "yarn build:clean && yarn build:prod",
        "build:dev": "cross-env NODE_PATH=src webpack --watch",
        "build:prod": "cross-env NODE_ENV=production NODE_PATH=src webpack",
        "build:clean": "rimraf ./dist",
        "dist": "yarn build && cd ./dist && yarn publish",
        "lint": "tslint 'src/**/*.ts?(x)'",
        "lint:fix": "tslint --fix 'src/**/*.ts?(x)'",
        "lint:watch": "chokidar 'src/**/*.ts' 'src/**/*.tsx' -c \"npm run lint\" --initial --verbose",
        "start": "yarn build:clean && yarn build:dev",
        "test": "yarn lint && jest --coverage",
        "test:snapshot": "jest --updateSnapshot",
        "test:watch": "jest --watch",
        "type-check": "tsc -p ./tsconfig.json --noEmit"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.3",
        "@types/enzyme": "^3.1.6",
        "@types/enzyme-adapter-react-16": "^1.0.1",
        "@types/jest": "^22.0.1",
        "@types/react": "^16.0.34",
        "@types/react-dom": "^16.0.3",
        "@types/react-test-renderer": "^16.0.0",
        "autoprefixer": "^7.2.5",
        "chokidar": "^2.0.0",
        "chokidar-cli": "^1.2.0",
        "classnames": "^2.2.5",
        "core-js": "^2.5.3",
        "cross-env": "^5.1.3",
        "css-loader": "^0.28.8",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^22.0.6",
        "node-sass": "^4.7.2",
        "node-sass-chokidar": "^0.0.3",
        "npm-run-all": "^4.1.2",
        "postcss-import": "^11.0.0",
        "postcss-loader": "^2.0.10",
        "postcss-nesting": "^4.2.1",
        "raf": "^3.4.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-test-renderer": "^16.2.0",
        "rimraf": "^2.6.2",
        "sass-loader": "^6.0.6",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.19.1",
        "ts-jest": "^22.0.1",
        "ts-lint": "^4.5.1",
        "ts-loader": "^3.2.0",
        "ts-node": "^4.1.0",
        "tslib": "^1.8.1",
        "tslint": "^5.9.1",
        "tslint-blueprint": "^0.1.0",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.10.1"
    }
}
